<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tvProductDetailStore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="어디어디 마트이름"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductDetailItemMemo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="질은 어쩌구지만 값은 어쩌구다"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvProductDetailStore"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDetailStore" />

        <TextView
            android:id="@+id/tvProductDetailTag"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/button_round"
            android:backgroundTint="@color/light_mint"
            android:backgroundTintMode="src_atop"
            android:gravity="center"
            android:text="@string/cheap"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductDetailPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="00000원"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvProductDetailTag"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDetailTag" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>